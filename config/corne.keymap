#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    behaviors {
        colon_semi_colon_swap: colon_semi_colon_swap {
            compatible = "zmk,behavior-mod-morph";
            label = "COLON_SEMI_COLON_SWAP";
            bindings = <&kp COLON>, <&kp SEMICOLON>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&kp TAB           &kp Q  &kp W  &kp E         &kp R  &kp T                     &kp Y          &kp U        &kp I      &kp O    &kp P                   &none
&mt LCTRL ESCAPE  &kp A  &kp S  &kp D         &kp F  &kp G                     &kp H          &kp J        &kp K      &kp L    &colon_semi_colon_swap  &kp SQT
&kp LSHFT         &kp Z  &kp X  &kp C         &kp V  &kp B                     &kp N          &kp M        &kp COMMA  &kp DOT  &kp FSLH                &kp RIGHT_SHIFT
                                &kp LEFT_ALT  &mo 1  &mt LEFT_COMMAND SPACE    &kp BACKSPACE  &lt 2 ENTER  &kp RALT
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&none  &none  &kp NUMBER_7  &kp NUMBER_8  &kp NUMBER_9  &none           &kp LG(LEFT_ARROW)  &kp LA(LEFT)  &kp RA(RIGHT)  &kp RG(RIGHT)  &none       &none
&none  &none  &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &kp NUMBER_0    &kp LEFT            &kp DOWN      &kp UP         &kp RIGHT      &bt BT_CLR  &bt BT_SEL 0
&none  &none  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &none           &none               &none         &none          &none          &bt BT_PRV  &bt BT_NXT
                            &trans        &trans        &trans          &trans              &trans        &trans
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&kp GRAVE     &kp MINUS  &kp LESS_THAN  &kp GREATER_THAN  &kp UNDER  &kp PIPE         &kp HASH   &kp LEFT_BRACE        &kp RIGHT_BRACE        &none  &none  &none
&kp ASTERISK  &kp SLASH  &kp MINUS      &kp PLUS          &kp EQUAL  &kp AMPERSAND    &kp CARET  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &none  &none  &none
&kp LSHFT     &none      &none          &none             &none      &kp PERCENT      &kp AT     &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &none  &none  &none
                                        &trans            &trans     &trans           &trans     &trans                &trans
            >;
        };
    };
};
